{
  "compilerOptions": {
    "rootDirs": ["src", "../backend/src"],
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}
