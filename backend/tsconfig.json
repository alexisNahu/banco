{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@backend/schema": ["../../../backend/src/db/schema.ts"]
    }
  },
  "references": [
    { "path": "../../../backend" }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}