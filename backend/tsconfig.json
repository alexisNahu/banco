{
  "compilerOptions": {
    "rootDirs": ["./src", "../libs/src"],
    "outDir": "./dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "types": ["node"],
    "lib": ["ESNext"],
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@libs/*": ["../libs/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "../libs/src/**/*"
  ],
  "exclude": ["dist"]
}
